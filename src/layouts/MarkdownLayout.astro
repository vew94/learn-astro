---
import type { MarkdownLayoutProps } from "astro";

import SearchForm from "@/components/SearchForm/SearchForm.astro";

import "./MarkdownLayout.css";

type Props = MarkdownLayoutProps<{
  author: string;
  date: string;
  title: string;
}>;

const { frontmatter } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <meta content="width=device-width" name="viewport" />
    <meta content={Astro.generator} name="generator" />
    <title>{frontmatter.title}</title>
    <link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
    <script defer is:inline src="/pagefind/pagefind-ui.js"></script>
  </head>
  <body>
    <header>
      <p>header</p>
    </header>
    <nav>
      <SearchForm />
    </nav>
    <main>
      <article class="article" data-pagefind-body>
        <h1 class="article-header-titles">{frontmatter.title}</h1>
        <nav aria-label="目次" class="article-toc" data-pagefind-ignore="all">
          <h2>Table of Contents</h2>
        </nav>
        <slot />
      </article>
    </main>
    <aside>
      <p>I am an aside</p>
    </aside>
    <footer>
      <p>footer</p>
    </footer>
  </body>
</html>
